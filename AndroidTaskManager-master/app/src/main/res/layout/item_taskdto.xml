<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <TextView
        android:id="@+id/item_taskDto_beginTime"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:gravity="center"
        tools:text="2019-11-10 00:00:00"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_taskDto_endTime"
        android:layout_width="150dp"
        android:layout_height="30dp"
        tools:text="2019-11-10 00:00:00"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/item_taskDto_beginTime"
        app:layout_constraintTop_toBottomOf="@id/item_taskDto_beginTime"/>

    <TextView
        android:id="@+id/item_taskDto_taskTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="18sp"
        android:paddingLeft="15dp"
        tools:text="这是一个标题"
        android:gravity="center_vertical"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@id/item_taskDto_beginTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_taskDto_beginTime"
        app:layout_constraintBottom_toBottomOf="@id/item_taskDto_endTime"/>

</androidx.constraintlayout.widget.ConstraintLayout>